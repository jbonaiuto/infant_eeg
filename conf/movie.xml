<task name="movie">
    <init_state>movie</init_state>
    <effector_settings>
        <parameters>
            <parameter name="effector_control" type="choice" value="eye_only">
                <options>
                    <option>eye_only</option>
                </options>
            </parameter>
            <parameter name="window_constraint" type="choice" value="eye_only">
                <options>
                    <option>eye_only</option>
                </options>
            </parameter>
            <parameter_group name="eye">
                <parameter name="show" type="boolean">False</parameter>
                <parameter name="units" type="choice" value="norm">
                    <options>
                        <option>norm</option>
                        <option>deg</option>
                        <option>cm</option>
                        <option>pix</option>
                    </options>
                </parameter>
                <parameter name="radius" type="number" min="0" max="1" decimals="2" single_step=".01">.01</parameter>
                <parameter name="red" type="number" min="0" max="1" decimals="2" single_step=".1">1</parameter>
                <parameter name="green" type="number" min="0" max="1" decimals="2" single_step=".1">0</parameter>
                <parameter name="blue" type="number" min="0" max="1" decimals="2" single_step=".1">0</parameter>
                <parameter name="alpha" type="number" min="0" max="1" decimals="2" single_step=".1">1</parameter>
            </parameter_group>
        </parameters>
    </effector_settings>
    <states>
        <state name="movie" type="movie">
            <parameters>
                <parameter name="duration" type="number" min="1" max="2000" decimals="0" single_step="1">2000</parameter>
                <parameter name="success_next_state" type="dynamic_choice" options_type="states">abort</parameter>
                <parameter_group name="video">
                    <parameter name="file" type="file" dir="../../data/movies">nat-oxen.mpg.avi</parameter>
                </parameter_group>
            </parameters>
        </state>
    </states>
</task>